            <ImageButton
                    Source="cocktail.png"
                    Command="{Binding ViewBasketCommand}"
                    BackgroundColor="#15209e"
                    Padding="16"
                    CornerRadius="8" />
        </views:BadgeView>
        
        -->


    </Grid>

</ContentPage>